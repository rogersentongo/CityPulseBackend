# MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=citypulse

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini
TRANSCRIBE_PROVIDER=openai   # openai|mock
EMBEDDINGS_PROVIDER=openai   # openai|mock
LLM_PROVIDER=openai          # openai|mock

# AWS S3
AWS_REGION=us-east-1
S3_BUCKET=citypulse-media-demo
S3_PREFIX=uploads/
S3_PRESIGN_EXPIRY_SECONDS=3600

# API Configuration
PORT=8000
ALLOW_ORIGINS=*  # Configure properly for production

# Location Handling
LOCATION_AUTODETECT=true
BOROUGH_REJECT_IF_UNKNOWN=true

# Multimodal Processing
VISION_PROVIDER=openai          # openai|mock
OCR_PROVIDER=tesseract          # tesseract|textract|mock
FRAME_SAMPLE_FPS=0.5            # frames/second for vision processing
SCENE_DETECT=true               # use scene-cut detection
SCENE_THRESHOLD=0.4             # ffmpeg scene detection threshold
OCR_ENABLE=true
OCR_LANGS=eng
ASR_TIMEOUT_S=180
VISION_TIMEOUT_S=180
OCR_TIMEOUT_S=120