# MongoDB Atlas
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DB=citypulse

# OpenAI (optional - using mock by default)
OPENAI_API_KEY=sk-your-openai-api-key-here
EMBEDDING_MODEL=text-embedding-3-small
LLM_MODEL=gpt-4o-mini
TRANSCRIBE_PROVIDER=mock     # openai|mock
EMBEDDINGS_PROVIDER=mock     # openai|mock
LLM_PROVIDER=mock            # openai|mock

# Local Media Storage
MEDIA_BASE_PATH=./app/media

# API Configuration
PORT=8000
ALLOW_ORIGINS=*  # Configure properly for production

# Location Handling
LOCATION_AUTODETECT=true
BOROUGH_REJECT_IF_UNKNOWN=true

# Multimodal Processing
VISION_PROVIDER=mock            # openai|mock
OCR_PROVIDER=tesseract          # tesseract|textract|mock
FRAME_SAMPLE_FPS=0.5            # frames/second for vision processing
SCENE_DETECT=true               # use scene-cut detection
SCENE_THRESHOLD=0.4             # ffmpeg scene detection threshold
OCR_ENABLE=true
OCR_LANGS=eng
ASR_TIMEOUT_S=180
VISION_TIMEOUT_S=180
OCR_TIMEOUT_S=120